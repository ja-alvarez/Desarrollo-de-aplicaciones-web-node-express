<div class="container">
    <div class="row align-items-stretch">
        {{#each productos}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card p-2">
                <h5 class="card-title text-center">{{mayuscula nombre}}</h5>
                <img src="/assets/img/{{nombre}}.png" class="card-img-top" alt="{{nombre}}">
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">{{mayuscula descripcion}}</p>
                    <p class="card-text precio">$ {{precio}}</p>
                    <button class="btn btn-success mt-auto">Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<style>
    body {
        background-color: rgba(184, 216, 197, 0.952);
    }

    .card-title {
        font-size: x-large;
    }

    .card-img-top {
        max-width: 100%;
        height: auto;
    }

    .card {
        height: 100%;
    }

    .precio,
    .card-title {
        font-weight: bold;
    }
</style>